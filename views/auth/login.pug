extends ../layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-5
        .card.shadow
          .card-header.bg-primary.text-white.text-center
            h3.mb-0
              i.fas.fa-hospital.me-2
              | HIS - Sistema Hospitalario
          .card-body.p-4
            h4.text-center.mb-4 Iniciar Sesión

            if error
              .alert.alert-danger.alert-dismissible.fade.show(role='alert')
                i.fas.fa-exclamation-triangle.me-2
                if error === 'complete-todos-los-campos'
                  | Complete todos los campos
                else if error === 'credenciales-invalidas'
                  | Usuario o contraseña incorrectos
                else if error === 'usuario-sin-perfil-medico'
                  | El usuario no tiene un perfil de médico asociado
                else if error === 'usuario-sin-perfil-enfermero'
                  | El usuario no tiene un perfil de enfermero asociado
                else if error === 'error-del-servidor'
                  | Error del servidor. Intente nuevamente
                else if error === 'debes-iniciar-sesion'
                  | Debes iniciar sesión para acceder
                else if error === 'sesion-cerrada'
                  | Sesión cerrada exitosamente
                else if error === 'rol-no-valido'
                  | Rol de usuario no válido
                else
                  = error
                button.btn-close(type='button' data-bs-dismiss='alert')

            form(action='/login' method='POST')
              .mb-3
                label.form-label(for='usuario')
                  i.fas.fa-user.me-2
                  strong Usuario
                input#usuario.form-control.form-control-lg(
                  type='text'
                  name='usuario'
                  placeholder='Ingrese su usuario'
                  required
                  autofocus
                )

              .mb-4
                label.form-label(for='password')
                  i.fas.fa-lock.me-2
                  strong Contraseña
                input#password.form-control.form-control-lg(
                  type='password'
                  name='password'
                  placeholder='Ingrese su contraseña'
                  required
                )

              .d-grid
                button.btn.btn-primary.btn-lg(type='submit')
                  i.fas.fa-sign-in-alt.me-2
                  | Iniciar Sesión

          .card-footer.text-center.text-muted
            small
              i.fas.fa-info-circle.me-1
              | Sistema de Gestión Hospitalaria

  style.
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
    }
    .card {
      border-radius: 15px;
      margin-top: 50px;
    }
    .card-header {
      border-top-left-radius: 15px !important;
      border-top-right-radius: 15px !important;
    }
